{
  "name": "proxy-runner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:backend": "tsc -p server/tsconfig.json",
    "build:frontend": "cd frontend && pnpm exec vite build",
    "start": "node dist/server.js",
    "dev": "pnpm run dev:backend & pnpm run dev:frontend",
    "dev:backend": "tsc -p server/tsconfig.json --watch & node --watch dist/server.js",
    "dev:frontend": "cd frontend && pnpm exec vite",
    "test": "pnpm run test:backend && pnpm run test:frontend",
    "test:backend": "vitest run",
    "test:frontend": "cd frontend && vitest run",
    "test:watch": "vitest",
    "test:watch:backend": "vitest",
    "test:watch:frontend": "cd frontend && vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "pnpm run test:coverage:backend && pnpm run test:coverage:frontend",
    "test:coverage:backend": "vitest run --coverage",
    "test:coverage:frontend": "cd frontend && vitest run --coverage"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "express": "^4.19.2",
    "immer": "^11.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "ws": "^8.19.0",
    "zustand": "^5.0.11",
    "zustand-debounce": "^2.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.5.0",
    "jsdom": "^28.0.0",
    "typescript": "^5.4.5",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
